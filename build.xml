<?xml version="1.0" encoding="UTF-8"?>
<project name="Movie_Renamer" default="default" basedir=".">
  <description>Builds, tests, and runs the project Movie Renamer.</description>
    
  <target name="-pre-init">
    <property file="src/fr/free/movierenamer/version.properties"/>
    <property name="dist.jar" value="dist/${apps}-${apps.version}.jar" />
  </target>
    
  <import file="nbproject/build-impl.xml"/>
   
  <!-- Unix/Windows installer -->
  <target name="mrInstaller" depends="init,compile,jar">
  <!-- check for java version and fail build if not the correct version -->
    <echo message="Java Version: ${java.version}"/>
    <fail message="Unsupported Java version: ${java.version}. Make sure that the version of the Java compiler is 1.6">
        <condition>
            <not>
                <or>
                    <contains string="${java.version}" substring="1.6" casesensitive="false" />
                </or>
            </not>
        </condition>
    </fail>

    <copy file="Izpack/install.xml" tofile="Izpack/install-tmp.xml" >
      <filterchain>
         <replacetokens>
            <token key="JARFILE" value="${apps}-${apps.version}.jar"/>
            <token key="VERSION" value="${apps.version}"/>
          </replacetokens>
      </filterchain>
    </copy>

    <copy file="Izpack/shortcutSpec.xml" tofile="Izpack/shortcutSpec-tmp.xml" >
      <filterchain>
         <replacetokens>
            <token key="JARFILE" value="${apps}-${apps.version}.jar"/>
          </replacetokens>
      </filterchain>
    </copy>

    <copy file="Izpack/Unix/Unix_shortcutSpec.xml" tofile="Izpack/Unix/Unix_shortcutSpec-tmp.xml" >
      <filterchain>
         <replacetokens>
            <token key="JARFILE" value="${apps}-${apps.version}.jar"/>
          </replacetokens>
      </filterchain>
    </copy>

    <copy file="dist/${apps}-${apps.version}.jar" tofile="Izpack/MacOS/Contents/Resources/Java/${apps}.jar"/>

    <!-- Izpack  -->
    <exec executable="compile">
      <arg value="Izpack/install-tmp.xml"/>
      <arg value="-o" />
      <arg value="dist/${apps}_Installer-${apps.version}.jar"/>
      <arg value="-k"/>
      <arg value="standard"/>
    </exec>

    <exec executable="chmod">
      <arg value="+x" />
      <arg value="dist/${apps}_Installer-${apps.version}.jar" />
      <arg value="${dist.jar}" />
    </exec>

    <delete file="Izpack/shortcutSpec-tmp.xml"/>
    <delete file="Izpack/Unix/Unix_shortcutSpec-tmp.xml"/>
    <delete file="Izpack/install-tmp.xml"/>
  </target>

  <!-- Installer -->
  <target name="installer" depends="mrInstaller">
  </target>
</project>
