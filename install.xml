<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<installation version="1.0">
  <info>
    <appname>Movie Renamer</appname>
    <appversion>@VERSION@</appversion>
    <authors>
      <author name="MagrÃ© Nicolas" email="movierenamer@free.fr"/>
    </authors>
    <url>http://movierenamer.free.fr/</url>
  </info>

  <guiprefs width="640" height="480" resizable="yes"/>

  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="fra"/>
  </locale>
  
  <resources>
      <res id="shortcutSpec.xml" src="shortcutSpec-tmp.xml"/>
    <res id="InfoPanel.info" src="gpl-3.0.txt"/>
    <res id="Unix_shortcutSpec.xml" src="Unix_shortcutSpec-tmp.xml"/>
  </resources>

  <panels>
      <panel classname="HelloPanel"/>
      <panel classname="InfoPanel"/>
      <panel classname="TargetPanel"/>
      <panel classname="PacksPanel"/>
      <panel classname="InstallPanel"/>
      <panel classname="ShortcutPanel"/>
      <panel classname="FinishPanel"/>
  </panels>
  <native type="izpack" name="ShellLink.dll"/>

  <packs>
    <pack name="Movie Renamer" required="yes">
      <description>Movie Renamer @VERSION@</description>
      <file src="gpl-3.0.txt" targetdir="$INSTALL_PATH"/>
      <file src="dist/@JARFILE@" targetdir="$INSTALL_PATH"/>
      <file src="postinst.sh" targetdir="$INSTALL_PATH" os="unix"/>
      <file src="postinst.bat" targetdir="$INSTALL_PATH" os="windows"/>
      <file src="src/image/icon.ico" targetdir="$INSTALL_PATH" os="windows"/>
      <file src="src/image/icon-32.png" targetdir="$INSTALL_PATH" os="unix"/>

      <executable targetfile="$INSTALL_PATH/postinst.sh" os="unix" stage="postinstall" failure="abort">
        <args>
          <arg value="$INSTALL_PATH/" />
          <arg value="@JARFILE@" />
          <arg value="Movie Renamer.jar" />
        </args>
      </executable>

      <executable targetfile="$INSTALL_PATH/postinst.bat" os="windows" stage="postinstall" failure="abort">
        <args>
          <arg value="$INSTALL_PATH\" />
          <arg value="@JARFILE@" />
          <arg value="Movie Renamer.jar" />
        </args>
      </executable>
    </pack>
    <pack name="Sources" required="no" preselected="no">
      <description>Movie Renamer @VERSION@ sources</description>
      <file src="src" targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
</installation>
